{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "osType": {
            "type": "string",
            "metadata": {
                "description": "The type of OS to provision for Machine Learning Server Operationalization"
            },
            "allowedValues": [
                "WS2016",
                "CentOS",
                "RedHat",
                "Ubuntu"
            ]
        },
        "adminUsername": {
            "type": "string",
            "metadata": {
                "description": "Username for the Virtual Machine."
            }
        },
        "adminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Password for the Virtual Machine."
            }
        },
        "oneboxPassword": {
            "type": "string",
            "metadata": {
                "description": "Password for Operationalization One-box."
            }
        },
        "vmName": {
            "type": "string",
            "metadata": {
                "description": "Name Prefix for the Virtual Machine."
            }
        },
        "vmSize": {
            "type": "string",
            "defaultValue": "Standard_NC6",
            "metadata": {
                "description": "Size for the Virtual Machine."
            }
        },
        "location": {
            "type": "string",
            "metadata": {
                "description": "The region to deploy the resources into"
            }
        },
        "storageAccountName": {
            "type": "string",
            "metadata": {
                "description": "Name of storage account"
            }
        },
        "storageAccountType": {
            "type": "string",
            "metadata": {
                "description": "The type of the Storage Account created"
            },
            "defaultValue": "Standard_LRS"
        }
    },
    "variables": {},
    "resources": [
        {
            "apiVersion": "[providers('Microsoft.Resources','deployments').apiVersions[0]]",
            "name": "linkedTemplate",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat('https://raw.githubusercontent.com/Microsoft/microsoft-r/master/azuremarketplace/onebox/',parameters('osType'), '.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "baseUrl": {
                        "value": "https://raw.githubusercontent.com/Microsoft/microsoft-r/master/azuremarketplace/onebox/"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "oneboxPassword": {
                        "value": "[parameters('oneboxPassword')]"
                    },
                    "vmName": {
                        "value": "[parameters('vmName')]"
                    },
                    "vmSize": {
                        "value": "[parameters('vmSize')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "storageAccountName": {
                        "value": "[parameters('storageAccountName')]"
                    },
                    "storageAccountType": {
                        "value": "[parameters('storageAccountType')]"
                    }
                }
            }
        }
    ],
    "outputs": {
        "OperationalizationVmUrl": {
            "type": "string",
            "value": "[concat('https://portal.azure.com/#resource/subscriptions/', subscription().subscriptionId, '/resourceGroups/', resourceGroup().name, '/providers/Microsoft.Compute/virtualMachines/', parameters('vmName'))]"
        }
    }
}